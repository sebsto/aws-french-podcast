# Podcast Search MCP Server Configuration
# Copy this file to .env and update with your values

# AWS Configuration
# AWS profile name with access to eu-central-1 region
AWS_PROFILE=podcast

# AWS region where resources are deployed
AWS_REGION=eu-central-1

# RSS Feed Configuration
# URL of the podcast RSS feed
RSS_FEED_URL=https://francais.podcast.go-aws.com/web/feed.xml

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL_SECONDS=3600

# Bedrock Knowledge Base Configuration
# Knowledge Base ID for semantic search (required)
BEDROCK_KB_ID=your-knowledge-base-id-here

# Maximum number of results to return from semantic search
MAX_SEMANTIC_RESULTS=10

# Transport Configuration
# Transport type: "stdio" for local execution, "http" for AgentCore
MCP_TRANSPORT=stdio

# HTTP transport configuration (only used when MCP_TRANSPORT=http)
MCP_HTTP_HOST=0.0.0.0
MCP_HTTP_PORT=8080
